@model Buildoc.Models.Proyecto

@{
    ViewData["Title"] = "Create";
    var usuarios = ViewBag.Usuarios as IEnumerable<SelectListItem>;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" required />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div id="departamentos-municipios-container">
                    <!-- Contenedor para los selects de departamentos y municipios -->
                    <div class="form-group">
                        <label for="departamentos">Departamento</label>
                        <select id="departamentos" class="form-control" name="Departamento">
                            <option value="">Seleccione un departamento</option>
                            @* Los departamentos serán cargados dinámicamente *@
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="municipios">Municipio</label>
                        <select id="municipios" class="form-control" name="Municipio"  disabled>
                            <option value="">Seleccione un municipio</option>
                            @* Los municipios serán cargados dinámicamente según el departamento seleccionado *@
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" required />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Residentes">Residentes</label>
                <div>
                    @foreach (var usuario in usuarios)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="residente_@usuario.Value"
                                   name="ResidentesIds"
                                   value="@usuario.Value" />
                            <label class="form-check-label" for="residente_@usuario.Value">
                                @usuario.Text
                            </label>
                        </div>
                    }
                </div>
            </div>

            <input type="hidden" asp-for="Estado" value="Activo" />
     
         
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Script para manejar departamentos y municipios -->
    <script src="/js/departamentos.js"></script>
  
}
   

