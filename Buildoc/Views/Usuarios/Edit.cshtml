﻿
@model Buildoc.Models.EditUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}
<div class=row justify-content-center">
    <div class="col-md-12">
        <form asp-controller="Usuarios" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for Id -->
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nombres" class="control-label"></label>
                        <input asp-for="Nombres" class="form-control" readonly/>
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Apellidos" class="control-label"></label>
                        <input asp-for="Apellidos" class="form-control" readonly />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Cedula" class="control-label"></label>
                        <input asp-for="Cedula" class="form-control" readonly />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="control-label"></label>
                        <input asp-for="FechaNacimiento" class="form-control" readonly />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div id="departamentos-municipios-container" class="row">
                <!-- Contenedor para los selects de departamentos y municipios -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="departamentos">Departamento</label>
                        <select id="departamentos" class="form-control" name="Departamento" required>
                            @if (!string.IsNullOrEmpty(Model.Departamento))
                            {
                                <option value="@Model.Departamento" selected>@Model.Departamento</option>
                            }
                            else
                            {
                                <option value="">Seleccione un departamento</option>
                            }
                            @* Los departamentos serán cargados dinámicamente *@
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="municipios">Municipio</label>
                        <select id="municipios" class="form-control" name="Municipio" required>
                            @if (!string.IsNullOrEmpty(Model.Municipio))
                            {
                                <option value="@Model.Municipio" selected>@Model.Municipio</option>
                            }
                            else
                            {
                                <option value="">Seleccione un municipio</option>
                            }

                            @* Los municipios serán cargados dinámicamente según el departamento seleccionado *@
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" required />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Eps" class="control-label"></label>
                        <input asp-for="Eps" class="form-control" required />
                        <span asp-validation-for="Eps" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Arl" class="control-label"></label>
                        <input asp-for="Arl" class="form-control" required />
                        <span asp-validation-for="Arl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Role" class="control-label">Role</label>
                        <select asp-for="Role" class="form-control" id="rol" required>
                            <option value="Residente">Residente</option>
                            <option value="Coordinador">Coordinador</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Profesion" class="control-label"></label>
                        <input asp-for="Profesion" class="form-control" required />
                        <span asp-validation-for="Profesion" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
	
    @{
        <script>
            $(document).ready(function () {
                initDepartamentos();

                // Preseleccionar valores guardados
                var departamentoGuardado = '@Html.Raw(Json.Serialize(Model.Departamento))';
                var municipioGuardado = '@Html.Raw(Json.Serialize(Model.Municipio))';

                if (departamentoGuardado) {
                    $('#departamentos').val(departamentoGuardado).trigger('change');

                    // Esperar a que los municipios se carguen
                    setTimeout(function () {
                        $('#municipios').val(municipioGuardado).prop('disabled', false);
                    }, 500);
                }
            });

            function initDepartamentos() {
                $.getJSON('~/colombia.json', function (data) {
                    var departamentoSelect = $('#departamentos');
                    var municipiosData = {};

                    data.forEach(function (departamento) {
                        // Agregar opciones de departamentos
                        if (departamento.departamento !== '@Model.Departamento') {
                            departamentoSelect.append(new Option(departamento.departamento, departamento.departamento));
                        }
                        municipiosData[departamento.departamento] = departamento.ciudades;
                    });

                    $('#departamentos').change(function () {
                        var departamentoNombre = $(this).val();
                        var municipioSelect = $('#municipios');

                        if (departamentoNombre) {
                            var municipios = municipiosData[departamentoNombre];
                            municipioSelect.empty().append(new Option('Seleccione un municipio', ''));
                            municipios.forEach(function (municipio) {
                                municipioSelect.append(new Option(municipio, municipio));
                            });
                            municipioSelect.prop('disabled', false);
                        } else {
                            municipioSelect.empty().append(new Option('Seleccione un municipio', '')).prop('disabled', true);
                        }
                    });

                    // Preseleccionar el departamento y disparar el evento change para cargar municipios
                    var departamentoGuardado = '@Html.Raw(Json.Serialize(Model.Departamento))';
                    if (departamentoGuardado) {
                        departamentoSelect.val(departamentoGuardado).trigger('change');
                    }
                });
            }

        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}