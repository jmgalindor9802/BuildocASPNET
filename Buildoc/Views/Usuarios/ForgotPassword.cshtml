@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<h1>@ViewData["Title"]</h1>
<p>Introduce tu correo electrónico para restablecer tu contraseña.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" value="@Model.Email" placeholder="name@example.com" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Restablecer Contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
