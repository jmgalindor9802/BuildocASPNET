@model IEnumerable<Buildoc.Models.Inspeccion>

@{
    ViewData["Title"] = "Inspecciones";
}

    <h1>Inspecciones</h1>

    <p>
        <a href="#" id="createNewModal" class="create-new btn btn-primary"
           data-url="@Url.Action("Create", "Inspecciones")"
           data-title="Crear nueva inspección" data-action="create">
            <i class="fas fa-plus"></i> Crear nueva inspección
        </a>
    </p>


    <!-- /.card -->
    <div class="row">
        <!-- Caja de información para inspecciones programadas -->
        <div class="col-md-3 col-sm-6 col-12">
        <a href="@Url.Action("Programadas", "Inspecciones")">
            <div class="info-box">
                <span class="info-box-icon bg-info"><i class="far fa-clock"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Programadas</span>
                    <span class="info-box-number">@ViewBag.CountProgramadas</span>
                </div>
                <!-- /.info-box-content -->
            </div>
        </div>

        <!-- Caja de información para inspecciones pendientes de revision -->
        <div class="col-md-3 col-sm-6 col-12">
            <a href="@Url.Action("PendientesRevision", "Inspecciones")">
            <div class="info-box">
                <span class="info-box-icon bg-warning"><i class="far fa-flag"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Pendientes de revisión</span>
                    <span class="info-box-number">@ViewBag.CountPendienteRevision</span>
                </div>

                <!-- /.info-box-content -->
            </div>
        </div>
        <!-- Caja de información para inspecciones vencidas-->
        <div class="col-md-3 col-sm-6 col-12">
            <a href="@Url.Action("SinResponder", "Inspecciones")">
            <div class="info-box">
                <span class="info-box-icon bg-danger"><i class="far fa-flag"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Sin responder</span>
                    <span class="info-box-number">@ViewBag.CountSinResponder</span>
                </div>
                <!-- /.info-box-content -->
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-12">
            <a href="@Url.Action("Aprobadas", "Inspecciones")">
                <div class="info-box shadow">
                    <span class="info-box-icon bg-success"><i class="far fa-copy"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Aprobadas</span>
                        <span class="info-box-number">@ViewBag.CountAprobadas</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            </a>
        </div>

    </div>
    <!-- /.info-box -->

    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaInspeccion)</th>
                <th>@Html.DisplayNameFor(model => model.TipoInspeccion)</th>
                <th>@Html.DisplayNameFor(model => model.Proyecto)</th>
                <th>@Html.DisplayNameFor(model => model.Inspector)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaInspeccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoInspeccion.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Proyecto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Inspector.NombreCompleto)</td>
                    <td>
                        <span class="@(item.Estado == EstadoInspeccion.Programada ? "estado-programada-text" : "")">
                            @Html.DisplayFor(modelItem => item.Estado)
                        </span>
                    </td>
                    <td>
                        <a href="#" class="edit-item" data-url="@Url.Action("Edit", "Inspecciones", new { id = item.Id })" data-title="Editar inspección" data-action="edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </a>
                        <a href="#" class="details-view" data-url="@Url.Action("Details", "Inspecciones", new { id = item.Id })" data-title="Detalles de la inspección" data-action="details">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </a>
                        <a href="#" class="delete-item" data-url="@Url.Action("Delete", "Inspecciones", new { id = item.Id })" data-title="Eliminar inspección" data-action="delete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


<style>
    .estado-programada-text {
        color: blue;
    }
</style>

