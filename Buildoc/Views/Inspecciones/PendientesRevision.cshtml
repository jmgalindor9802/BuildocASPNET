@model IEnumerable<Buildoc.Models.Inspeccion>

@{
    ViewData["Title"] = "Inspecciones";
}

    <h1>Inspecciones pendientes de revisión</h1>

<p>
    <a href="@Url.Action("Index", "Inspecciones")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</p>

    <!-- /.card -->
    

    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaInspeccion)</th>
                <th>@Html.DisplayNameFor(model => model.TipoInspeccion)</th>
                <th>@Html.DisplayNameFor(model => model.Proyecto)</th>
                <th>@Html.DisplayNameFor(model => model.Inspector)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaInspeccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoInspeccion.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Proyecto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Inspector.NombreCompleto)</td>    
                    <td>
                        <span class="@(item.Estado == EstadoInspeccion.Programada ? "estado-programada-text" : "")">
                            @Html.DisplayFor(modelItem => item.Estado)
                        </span>
                    </td>
                    <td>
                    @if (item.Estado == EstadoInspeccion.PendientesDeRevision || item.Estado == EstadoInspeccion.Aprobada)
                    {
                        <button class="btn btn-success" onclick="changeState('@item.Id', 'Aprobada')">Aprobar</button>
                        <button class="btn btn-danger" onclick="changeState('@item.Id', 'Desaprobada')">Desaprobar</button>
                    }
                        <a href="#" class="details-view" data-url="@Url.Action("Details", "Inspecciones", new { id = item.Id })" data-title="Detalles de la inspección" data-action="details">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </a>
                        <a href="#" class="delete-item" data-url="@Url.Action("Delete", "Inspecciones", new { id = item.Id })" data-title="Eliminar inspección" data-action="delete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


<style>
    .estado-programada-text {
        color: blue;
    }
</style>

@section Scripts {
    <script>
        function changeState(id, newState) {
            $.ajax({
                url: '@Url.Action("ChangeState", "Inspecciones")',
                type: 'POST',
                data: { id: id, newState: newState },
                success: function (response) {
                    // Opcional: Puedes hacer algo aquí si la respuesta es exitosa
                    // Enviar una solicitud para obtener la respuesta y mostrar el mensaje de Toast
                    $.get('@Url.Action("PendientesRevision", "Inspecciones")', function (data) {
                        // Actualiza el HTML de la página
                        $('body').html(data);

                        // Mostrar el mensaje de Toastr basado en TempData
                        var successMessage = '@TempData["SuccessMessage"]';
                        var errorMessage = '@TempData["ErrorMessage"]';
                        var warningMessage = '@TempData["WarningMessage"]';

                        if (successMessage) {
                            toastr.success(successMessage);
                        }

                        if (errorMessage) {
                            toastr.error(errorMessage);
                        }

                        if (warningMessage) {
                            toastr.warning(warningMessage);
                        }
                    });
                },
                error: function () {
                    toastr.error("Hubo un error al cambiar el estado.");
                }
            });
        }
    </script>

}
