@model Buildoc.Models.Inspeccion

@{
    Layout = null;
}

<!DOCTYPE html>

<html>


<h3>¿Está seguro que desea eliminar esta inspección programada?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInspeccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInspeccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Objetivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Objetivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoInspeccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoInspeccion.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Departamento)
        </dd>     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inspector)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inspector.NombreCompleto) (@Html.DisplayFor(model => model.Inspector.Email))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

    </form>
</div>

</html>
